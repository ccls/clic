<% content_tag_for( :tr, event, :class => 'row' ) do %>
 <td class='title'>
  <%= link_to event.title, event %>
 </td>
 <td class='time'>
  <%= event.time %>
 </td>
 <td class='manage'>
  <%= link_to 'Edit', edit_event_path(event), :class => 'button' %>&nbsp;
  <% destroy_link_to 'Destroy', event_path(event) do %>
   <%= hidden_field_tag 'confirm', "Destroy event '#{event}'?", 
     :id => nil %>
<%= submit_link_to('Destroy') %>
  <% end %>
 </td>
<% end %><!-- class='event row' -->
