<% stylesheets('user') %>

<h2>User:</h2>
<% form_for( @user, :html => { 
	:multipart => true, :class => 'edit_user' } ) do |f| %>

<%= f.error_messages %>
<%#= hidden_field_tag( :token, params[:token] ) if( params[:token] ) %>
<%= f.wrapped_text_field :username,
	:label_text => "Username <span class='required'>*</span>",
	:class => 'autosize' %>
<%= f.wrapped_text_field :email,
	:label_text => "Email <span class='required'>* ***</span>",
	:class => 'autosize' %>
<% if @user.new_record? %>
 <%= f.wrapped_password_field :password,
		:label_text => "Password <span class='required'>* **</span>",
    :class => 'autosize' %>
 <%= f.wrapped_password_field :password_confirmation,
		:label_text => "Password Confirmation <span class='required'>* **</span>",
    :class => 'autosize' %>
<% end %>
<%= f.wrapped_text_field :title,
		:label_text => "Title <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_field :first_name,
		:label_text => "First Name <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_field :last_name,
		:label_text => "Last Name <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_field :degrees,
		:label_text => "Degrees <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_field :profession,
		:label_text => "Profession <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_field :organization,
		:label_text => "Organization <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_field :phone_number,
		:label_text => "Phone Number <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_area :address, :rows => 3,
		:label_text => "Address <span class='required'>*</span>",
    :class => 'autosize' %>
<%= f.wrapped_text_area :research_interests,
	:class => 'autosize' %>
<%= f.wrapped_text_area :selected_publications,
	:class => 'autosize' %>

<%= f.wrapped_file_field :avatar %>
<% unless @user.new_record? -%>
<div class='field_wrapper'>(<%= @user.avatar.url -%>)</div>
<% end -%><br />

 <p>
  <%= f.submit "Submit" %>
  <%= submit_link_to "Submit" %>
 </p>
<p><span class='required'>*</span>&nbsp;-&nbsp;Required</p>
<p><span class='required'>**</span>&nbsp;-&nbsp;Password requires at least one lowercase and one uppercase letter, one number and one special character </p>
<p><span class='required'>***</span>&nbsp;-&nbsp;If you change your email address, you will be unable to login until the new address is confirmed.</p>
<% end %>
