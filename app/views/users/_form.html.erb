<% stylesheets('user') %>

<h2>User:</h2>
<% form_for( @user ) do |f| %>
	<%= f.error_messages %>
	<%= hidden_field_tag( :token, params[:token] ) if( params[:token] ) %>
	<%= f.wrapped_text_field :username %>
	<%= f.wrapped_text_field :email %>
	<%= f.wrapped_password_field :password %>
	<%= f.wrapped_password_field :password_confirmation %>
	<p><%= f.submit "Submit" %></p>
<% end %>
