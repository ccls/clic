<h2>Edit Forum</h2>

<%= form_for(@forum ) do |f| %>
 <%= f.error_messages %>

 <p>Name MUST be unique</p>
 <%= f.wrapped_text_field :name,
	:class => 'autosize' %>

 <p>
  <%= f.submit( 'Update Forum' ) %>&nbsp;
  <%= link_to "Cancel Update", members_only_path, :class => 'button' %>
 </p>
<% end %>

