<% content_tag_for( :tr, topic, :class => 'row' ) do %>
 <td class='title'>
  <%= link_to topic.title, topic %><br/>
	<span>by <%= topic.user.username %></span>
 </td>
 <td class='posts'>
  <%= topic.posts_count %>
 </td>
 <td class='views'>
  (possible)
 </td>
 <td class='last_post'>
  <span>when</span><br/>
	<span>by who</span>
 </td>
<% end %><!-- class='topic row' -->
