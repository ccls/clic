<h2>Editing group document</h2>

<% form_for(@document, 
	:url => group_document_path(@group,@document)) do |f| %>
 <%= render :partial => 'form', :locals => {:f => f} %>
 <p>
  <%= f.submit( 'Update' ) %>&nbsp;
  <%= link_to 'Show Document', group_document_path(@group,@document),
		:class => 'button' %>&nbsp;
  <%= link_to "Back to Group's Documents", group_documents_path(@group),
		:class => 'button' %>
 </p>
<% end %>
