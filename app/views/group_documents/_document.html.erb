<% content_tag_for( :tr, document, :class => 'row' ) do %>
 <td class='title'>
  <%= link_to document.title, group_document_path(@group,document) %>
 </td>
 <td class='manage'>
  <%= link_to 'Edit', edit_group_document_path(@group,document), 
    :class => 'button' %>&nbsp;
  <% destroy_link_to 'Destroy', group_document_path(@group,document) do %>
   <%= hidden_field_tag 'confirm', "Destroy document '#{document}'?", 
     :id => nil %>
<%= submit_link_to('Destroy') %>
  <% end %>
 </td>
<% end %><!-- class='document row' -->
