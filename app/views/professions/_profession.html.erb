<%= content_tag_for( :tr, profession, :class => "profession row" ) do %>
<% if current_user.may_order? -%>
 <td><%= hidden_field_tag( 'ids[]', profession.id, :id => nil ) %>
  <%= image_tag 'drag.gif', :class => 'handle' %></td>
<% end %>
 <td class='position'><%= profession.position -%></td>
 <td class='name'><%= link_to profession, profession %></td>
 <td class='manage'>
  <%= link_to 'Edit', edit_profession_path(profession), 
   :class => 'button' %>&nbsp;
  <%= destroy_link_to 'Destroy', profession_path(profession) do %>
   <%= hidden_field_tag 'confirm', "Destroy profession '#{h(profession)}'?", 
    :id => nil %>
  <% end %>
 </td>
<% end %>
