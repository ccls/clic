<%= f.error_messages %>
<%= f.wrapped_text_field :title,
	:label_text => "Title <span class='required'>*</span>",
	:class => 'autosize' %>
 <%= f.wrapped_text_field :location,
	:class => 'autosize' %>
<%= f.wrapped_text_area :content,
	:label_text => "Content <span class='required'>*</span>",
	:class => 'autosize' %>
<% f.wrapped_date_text_field :begins_on,
	:label_text => "Begins On <span class='required'>*</span>" do %>
 <%= f.wrapped_hour_select(:begins_at_hour,
	:label_text => '&nbsp;&nbsp;at&nbsp;') %>
 <%= f.wrapped_minute_select(:begins_at_minute, 
	:label_text => '&nbsp;:&nbsp;') %>
 <%= f.wrapped_meridiem_select(:begins_at_meridiem,
	:label_text => '&nbsp;&nbsp;') %>
<% end %>
<% f.wrapped_date_text_field :ends_on do %>
 <%= f.wrapped_hour_select(:ends_at_hour,
	:label_text => '&nbsp;&nbsp;at&nbsp;') %>
 <%= f.wrapped_minute_select(:ends_at_minute,
	:label_text => '&nbsp;:&nbsp;') %>
 <%= f.wrapped_meridiem_select(:ends_at_meridiem,
	:label_text => '&nbsp;&nbsp;') %>
<% end %>
<p><span class='required'>*&nbsp;-&nbsp;Required</span> (times are optional)</p>
