<h1>Editing group announcement</h1>

<% form_for(@announcement, 
	:url => group_announcement_path(@group,@annoucement) ) do |f| %>
 <%= render :partial => 'form', :locals => {:f => f} %>
 <p>
  <%= f.submit( 'Update' ) %>
  <%= submit_link_to( 'Update' ) %>
&nbsp;
  <%= link_to 'Show', group_announcement_path(@group,@announcement),:class => 'button' %>
&nbsp;
  <%= link_to 'Back', group_announcements_path(@group),:class => 'button' %>
 </p>
<% end %>
