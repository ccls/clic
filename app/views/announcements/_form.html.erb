<% javascripts('tiny_mce/jquery.tinymce.js') %>
<h2>Editing announcement</h2>

<% form_for(@announcement) do |f| %>
 <%= f.error_messages %>
 <%= f.wrapped_text_field :title,
	:class => 'autosize' %>
 <%= f.wrapped_text_area :content,
	:class => 'tinymce' %>
 <p>
  <%= f.submit_link_to( ((@announcement.new_record?)?'Create':'Update')<<" Announcement" ) %>
  <% unless( @announcement.new_record? ) %>
    <%= link_to 'Cancel and Show This Announcement', @announcement, :class => 'button' %>
  <% end %>
  <%= link_to 'Cancel and Show All Announcements', announcements_path, :class => 'button' %>
 </p>
<% end %>

