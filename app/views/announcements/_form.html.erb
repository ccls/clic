<% javascripts('tiny_mce/jquery.tinymce.js') %>
<h1>Editing announcement</h1>

<% form_for(@announcement) do |f| %>
 <%= f.error_messages %>
 <%= f.wrapped_text_field :title,
	:class => 'autosize' %>
 <% f.wrapped_check_box :textilize,
   :label_text => "Use textile to parse content?" do %>
 <%= link_to 'What is textile?', 'http://redcloth.org', :target => 'new' %>
<% end %>
 <%= f.wrapped_text_area :content,
	:class => 'autosize tinymce' %>
 <p>
  <%= f.submit( (@announcement.new_record?)?'Create':'Update' ) %>
  <%= submit_link_to( (@announcement.new_record?)?'Create':'Update' ) %>
  <% unless( @announcement.new_record? ) %>
    <%= link_to 'Cancel and Show Announcement', @announcement, :class => 'button' %>
  <% end %>
  <%= link_to 'Cancel Show Announcements', announcements_path, :class => 'button' %>
 </p>
<% end %>

