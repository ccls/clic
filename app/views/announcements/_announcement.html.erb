<%= content_tag_for( :tr, announcement, :class => 'row' ) do %>
 <td class='title'>
  <%= link_to announcement.title, announcement %>
 </td>
 <td class='time'>
  <%= announcement.time %>
 </td>
 <td class='manage'>
  <%= link_to 'Edit', edit_announcement_path(announcement), :class => 'button' %>&nbsp;
  <%= destroy_link_to 'Destroy', announcement_path(announcement) do %>
   <%= hidden_field_tag 'confirm', "Destroy announcement '#{h(announcement)}'?", 
     :id => nil %>
  <% end %>
 </td>
<% end %><!-- class='announcement row' -->
