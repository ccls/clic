<% javascripts('tiny_mce/jquery.tinymce.js') %>
<h2>Group:</h2>

<% form_for(@group) do |f| %>
 <%= f.error_messages %>
 <%= f.wrapped_collection_select( :parent_id, Group.roots,
  :id, :name, :include_blank => true,
  :label_text => 'Parent: (main or sub group?)' ) %>
 <%= f.wrapped_text_field :name,
	:class => 'autosize' %>
 <%= f.wrapped_text_area  :description,
	:class => 'tinymce' %>
 <p>
  <%= f.submit_link_to( (@group.new_record?)?'Create':'Update' ) %>&nbsp;
  <%= link_to 'Cancel', members_only_path,
		:class => 'button' %>
 </p>
<% end %>
