<% content_tag_for( :tr, forum, :class => 'row' ) do %>
 <td class='name'>
  <%= link_to forum.name, forum %>
 </td>
 <td class='topics'>
  <%= forum.topics_count %>
 </td>
 <td class='posts'>
  <%= forum.posts_count %>
 </td>
 <td class='last_post'>
  <% if forum.last_post %>
  <span><%= forum.last_post.created_at %></span><br/>
	<span>by&nbsp;<%=h forum.last_post.user %></span>
  <% end %>
 </td>
<% end %><!-- class='forum row' -->
