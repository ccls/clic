<% content_tag_for( :tr, forum, :class => 'row' ) do %>
 <td class='name'>
  <%= link_to forum.name, forum %>
 </td>
 <td class='topics'>
  <%= forum.topics_count %>
 </td>
 <td class='posts'>
  <%= forum.posts_count %>
 </td>
 <td class='last_post'>
  <span>when</span><br/>
	<span>by who</span>
 </td>
<% end %><!-- class='forum row' -->
