<% stylesheets('user') %>

<h2>Edit Password</h2>
<%= form_for( @user, :url => password_reset_path(@user.perishable_token),
	:method => :put,
	:class => 'edit_user' ) do |f| %>

 <%= f.error_messages %>
 <%= f.wrapped_password_field :password,
		:label_text => "Password #{required('*')}".html_safe,
    :class => 'autosize' %>
 <%= f.wrapped_password_field :password_confirmation,
		:label_text => "Password Confirmation #{required('*')}".html_safe,
    :class => 'autosize' %>

<p>
  <%= f.submit "Submit" %>
</p>
<p><%=required('*')-%>&nbsp;-&nbsp;Password requires at least one lowercase and one uppercase letter, one number and one special character </p>
<% end %>
