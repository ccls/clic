<% stylesheets('user') %>

<h2>Reset Password</h2>
<% form_tag( password_resets_path,
	:class => 'edit_user' ) do %>

<div class='field_wrapper'>
<%= label_tag :email %>
<%= text_field_tag :email, nil, :class => 'autosize' %>
</div><!-- class='field_wrapper' -->

<p>
  <%= submit_tag "Submit" %>
  <%= submit_link_to "Submit" %>
</p>
<% end %>
