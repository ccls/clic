<% javascripts('photo') %>
<% stylesheets('photo') %>

<p>
  <b>Title:</b>
  <%=h @photo.title %>
</p>

<div id='images'>
<ul>
<% @photo.image.styles.keys.unshift(:original).each do |key| %>
<li><%= link_to key, "##{key}" %></li>
<% end %>
</ul>
<% @photo.image.styles.keys.unshift(:original).each do |key| %>
<div id="<%= key %>" class='image_preview'>
<p><%= link_to( @photo.image.url(key), @photo.image.url(key) ) %></p>
<%= image_tag @photo.image.url(key) %>
</div><!-- class='image_preview' -->
<% end %>
</div><!-- id='images' -->



<p>
  <b>Caption:</b>
  <%=h @photo.caption %>
</p>

<%= link_to 'Edit this Photo', edit_photo_path(@photo), :class => 'button' %>&nbsp;
<%= link_to 'Back to Photos', photos_path, :class => 'button' %>
