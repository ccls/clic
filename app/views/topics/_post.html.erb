<% content_tag_for( :tr, post, :class => 'row' ) do %>
 <td class='user'>
	<span>by&nbsp;<%=h post.user.username %></span>
 </td>
 <td class='body'>
  <%=h post.body %>
<% unless post.group_documents.empty? %>
<br/><%= post.group_documents.first.document.path %>
<% end %>
 </td>
 <td class='created_at'>
  <%= post.created_at %>
 </td>
<% end %><!-- class='post row' -->
